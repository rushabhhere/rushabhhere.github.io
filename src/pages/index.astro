---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main
    class="max-w-[1000px] px-6 md:px-0 md:w-11/12 mx-auto mt-10 mb-10 lg:mt-40 flex flex-col gap-7 lg:grid grid-cols-10"
  >
    <div
      class="font-heading font-semibold text-2xl sm:text-3xl md:text-4xl col-span-7 lg:self-end"
    >
      <h1>Hey, I'm Rushabh <span class="-tracking-[.13em]">----</span></h1>
      <h2>Student and Web&nbsp;Developer.</h2>
    </div>

    <img
      src="/images/rj.png"
      alt="Rushabh Javeri"
      class="aspect-square w-4/5 max-w-[300px] md:w-full rounded-xl self-center sm:self-start col-span-3 row-span-2"
