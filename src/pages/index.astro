      <li>
        <a
          class="underline underline-offset-4 hover:opacity-75"
          target="_blank"
          href="mailto:rushabhjaveri@duck.com"
        >
          rushabhjaveri@duck.com
        </a>
      </li>
    </ul>
  </main>
</Layout>
